@using OpenRpg.Genres.Characters
@using OpenRpg.Core.Extensions
<CardSection>
    <div class="container">
        @if (Character != null)
        {
            <CharacterDetails Name="@Character.NameLocaleId" RaceTemplate="@Character.Variables.Race()" Class="@Character.Variables.Class()" />
            <br/>
            <CharacterVitals Stats="@Character.Stats" State="@Character.State" />
            <br/>
            <CharacterStats Stats="@Character.Stats" />
            <br/>
            <div class="columns">
                <div class="column has-text-centered">
                    <h4 class="subtitle mb-2 has-text-dark has-text-centered">Race Effects</h4>
                    <EffectList Effects="@Character.Variables.Race().Effects.ToArray()" />
                </div>
                <div class="column has-text-centered">
                    <h4 class="subtitle mb-2 has-text-dark">Class Effects</h4>
                    <EffectList Effects="@Character.Variables.Class().Template.Effects.ToArray()" />
                </div>
            </div>
        }
    </div>
</CardSection>

@code {
    [Parameter]
    public ICharacter Character { get; set; }
}