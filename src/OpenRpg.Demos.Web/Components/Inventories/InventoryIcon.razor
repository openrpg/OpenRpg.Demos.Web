@using OpenRpg.Genres.Fantasy.Characters
@using OpenRpg.Items

@if (Item == null)
{
    <figure class="image is-64x64 item-border with-rounding">
        <img src="images/items/empty.png">
    </figure>
}
else
{
    <ItemIcon Item="Item" Character="Character"></ItemIcon>
}

@code {
    [Parameter]
    public IItem Item { get; set; }

    [Parameter]
    public ICharacter Character { get; set; }
}